<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login" tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login :"
        android:id="@+id/lbl_login"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/lbl_password"
        android:layout_alignEnd="@+id/lbl_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password :"
        android:id="@+id/lbl_password"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/lbl_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Login"
        android:ems="10"
        android:id="@+id/txt_login"
        android:layout_alignBaseline="@+id/lbl_login"
        android:layout_alignBottom="@+id/lbl_login"
        android:layout_toRightOf="@+id/lbl_password"
        android:layout_toEndOf="@+id/lbl_password"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txt_password"
        android:layout_alignBottom="@+id/lbl_password"
        android:layout_alignLeft="@+id/txt_login"
        android:layout_alignStart="@+id/txt_login"
        android:text="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/btn_valider"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txt_password"
        android:layout_alignLeft="@+id/txt_password"
        android:layout_alignStart="@+id/txt_password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiter"
        android:id="@+id/btn_quit"
        android:layout_alignTop="@+id/btn_valider"
        android:layout_alignRight="@+id/txt_password"
        android:layout_alignEnd="@+id/txt_password"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

</RelativeLayout>
